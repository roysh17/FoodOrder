
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<div class="container-fluid px-4">
    <h1 class="mt-4">Daftar Pesanan</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1 float-end"></i>
            Daftar Pesanan
        </div>
        <div class="card-body">
            <div class="col-2 mb-2">
                <a href='/orders/add' class='btn btn-success mb-2'>Add</a>
            </div>

            <div class="row col-12">

                <form>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <input class="form-control" id="keySearch" type="text" placeholder="Nomor pesanan/ Nama pemesan" />
                        </div>
                        <div class="col-md-4">
                            <select class="form-control" name="paidStatus" id="paidStatus">                                                          
                                <option value="0" selected="selected">Belum bayar</option>
                                <option value="1">Lunas</option>                                                                                        
                            </select>
                        </div>
                        <div class="col-md-2">
                            <div class="form-floating">
                                <div class="d-grid"><a class="btn btn-primary btn-block" href="#" onclick="loadTableData();">Search</a></div>
                            </div>
                        </div>
                    </div>
                </form>

                @if (TempData["Message"] != null)
                {
                    <center class="text-success">@TempData["Message"]</center>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <center class="text-danger">@TempData["ErrorMessage"]</center>
                }

                <table id="dataTable1" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Order No.</th>
                            <th>Date</th>
                            <th>Total Price</th>
                            <th>Customer Name</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@inject FoodOrder.App.Interfaces.IJqueryAjaxUrlHelper urlHelper;

@section scripts {

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>

    <script>

        function loadTableData() {

            // recreate datatable
            var dataTable = $('#dataTable1').DataTable();
            dataTable.clear().draw();
            dataTable.destroy();

            var _url = '@urlHelper.GetOrdersByPagingUrl()';

            console.log(_url);
            var _keySearch = $('#keySearch').val();
            var _paidStatus = $('#paidStatus').val();

            $('#dataTable1').DataTable(
                {
                    ajax: {
                        url: _url,
                        type: "GET",
                        data: { keySearch: _keySearch, paidStatus: _paidStatus }
                    },
                    processing: true,
                    serverSide: true,
                    filter: false,
                    columns: [
                        { data: "orderNo" },
                        { data: "orderDate" },
                        { data: "totalPrice" },
                        { data: "customerName" },
                        { data: "paidStatus" },
                        {
                            data: "orderId",
                            render: function (data, row) {
                                return "<a href='orders/detail/" + data + "' class='btn btn-primary'>Detail</a>";
                            }

                        }

                    ]
                }
            );
        }

        $(document).ready(function () {

            loadTableData();

        });

    </script>

}

